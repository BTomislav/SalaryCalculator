<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/custom_popup_bkg"
    android:weightSum="9"
    android:paddingTop="10dp"
    android:paddingBottom="13dp">

    <LinearLayout
        android:paddingRight="2dp"
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:textColor="#C4CED6"
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Date"
            android:textAlignment="center"
            android:textSize="15sp" />

        <EditText
            android:textColor="@color/OrangeTheme"
            android:id="@+id/inputDate"
            android:backgroundTint="#4B5359"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center" />

        <Button
            android:textColor="#FFFF"
            android:background="@drawable/custom_button_alt"
            android:id="@+id/buttonDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get current date" />

        <CheckBox
            android:textColor="#FFFF"
            android:buttonTint="#FD8D3E"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/BonusWageCheckBox"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Wage 2"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:textColor="#C4CED6"
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Check in"
            android:textAlignment="center"
            android:textSize="15sp" />

        <EditText
            android:textColor="@color/OrangeTheme"
            android:backgroundTint="#4B5359"
            android:id="@+id/input_check_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center" />

        <Button
            android:textColor="#FFFF"
            android:background="@drawable/custom_button_alt"
            android:id="@+id/button_check_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get current time" />

        <Button
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button_alt"
            android:textColor="#FFFF"
            android:id="@+id/buttonDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete item" />

        <Button
            android:textColor="#FFFF"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button_bkg"
            android:id="@+id/buttonConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="5dp"
        android:paddingLeft="2dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:textColor="#C4CED6"
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Check out"
            android:textAlignment="center"
            android:textSize="15sp" />

        <EditText
            android:textColor="@color/OrangeTheme"
            android:backgroundTint="#4B5359"
            android:id="@+id/input_check_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center" />

        <Button

            android:textColor="#FFFF"
            android:background="@drawable/custom_button_alt"
            android:id="@+id/button_check_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get current time" />

        <CheckBox
            android:textColor="#FFFF"
            android:buttonTint="#FD8D3E"
            android:layout_marginTop="10dp"
            android:id="@+id/BonusCheckBox"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Bonus"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>