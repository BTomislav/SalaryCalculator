<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_popup_bkg"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="7">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Bonus (%):"
                android:textColor="#C4CED6"
                android:textSize="24sp" />

            <TextView
                android:textColor="#C4CED6"
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tax (%):"
                android:textSize="24sp" />

            <TextView
                android:textColor="#C4CED6"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Wage:"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:textColor="#C4CED6"
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Currency:"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:textColor="#C4CED6"
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Wage #2:"
                android:textAlignment="center"
                android:textSize="24sp" />
            <TextView
                android:textColor="#C4CED6"
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Break:"
                android:textAlignment="center"
                android:textSize="24sp" />
            <TextView
                android:visibility="gone"
                android:textColor="#C4CED6"
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Break Duration (minutes):"
                android:textAlignment="center"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            android:weightSum="7">

            <EditText
                android:textColor="#FFFF"
                android:backgroundTint="#4B5359"
                android:id="@+id/inputBonus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="0"
                android:textAlignment="center"
                android:autofillHints="" />

            <EditText
                android:textColor="#FFFF"
                android:backgroundTint="#4B5359"
                android:id="@+id/inputTax"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="0" />

            <EditText
                android:textColor="#FFFF"
                android:backgroundTint="#4B5359"
                android:id="@+id/inputWage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="10.80"
                android:textAlignment="center" />

            <EditText
                android:textColor="#FFFF"
                android:backgroundTint="#4B5359"
                android:id="@+id/inputCurrency"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="â‚¬"
                android:textAlignment="center" />

            <EditText
                android:textColor="#FFFF"
                android:backgroundTint="#4B5359"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/inputWage2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="0" />

            <CheckBox
                android:buttonTint="@color/OrangeTheme"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/breakCheck"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <EditText
                android:visibility="invisible"
                android:textColor="#FFFF"
                android:backgroundTint="#4B5359"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/inputBreak"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="0" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button_bkg"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="#FFFF"/>

    <Button
        android:textColor="#FFFF"
        android:background="@drawable/custom_button_bkg"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/buttonClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear database" />

</LinearLayout>